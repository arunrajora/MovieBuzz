<android.support.v4.widget.NestedScrollView
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_gravity="fill_vertical"
	android:fillViewport="true"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	tools:context="com.arun.buzz.movie.app.moviebuzz.movie_details_activityFragment"
	tools:showIn="@layout/activity_movie_details_activity"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<android.support.v7.widget.CardView
			android:layout_margin="@dimen/details_view_card"
			android:elevation="@dimen/cardview_default_elevation"
			app:cardCornerRadius="@dimen/cardview_default_radius"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		<ImageView
			android:layout_width="@dimen/details_view_poster_width"
			android:layout_height="@dimen/details_view_poster_height"
			android:id="@+id/details_poster"
		    android:layout_margin="@dimen/details_view_poster_margin"
			/>
		</android.support.v7.widget.CardView>
		<android.support.v7.widget.CardView
			android:layout_margin="@dimen/details_view_card"
			android:elevation="@dimen/cardview_default_elevation"
			app:cardCornerRadius="@dimen/cardview_default_radius"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
		<LinearLayout
			android:layout_margin="@dimen/details_view_poster_margin"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="@dimen/details_view_poster_height">
		<TextView
			android:layout_toRightOf="@id/details_poster"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/details_text_view_height"
			android:layout_weight="1"
			android:id="@+id/release_date"
		    android:textAlignment="center"
		    android:textSize="@dimen/text_size_small"
			/>
		<TextView
			android:layout_toRightOf="@id/details_poster"
			android:id="@+id/vote_average"
			android:layout_width="fill_parent"
			android:layout_height="@dimen/details_text_view_height"
			android:layout_weight="1"
			android:textAlignment="center"
		    android:textSize="@dimen/text_size_small"
			/>
		</LinearLayout>
		</android.support.v7.widget.CardView>
	</LinearLayout>
	<android.support.v7.widget.CardView
		android:layout_margin="@dimen/details_view_card"
		android:elevation="@dimen/cardview_default_elevation"
		app:cardCornerRadius="@dimen/cardview_default_radius"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
			<TextView
				android:layout_margin="@dimen/details_view_poster_description"
				android:id="@+id/description_movie"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
	</android.support.v7.widget.CardView>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>