<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/scrollViewFragment"
            xmlns:app="http://schemas.android.com/apk/res-auto"
	>
<LinearLayout  android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
               android:id="@+id/LinearLayout"
             tools:context="com.arun.rajora.movies.buzz.moviesbuzz.movie_detail_fragment">
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:elevation="@dimen/cardview_default_elevation"
		android:layout_margin="@dimen/details_view_poster_margin">

		<TextView

			android:textAlignment="center"
			android:textSize="@dimen/details_text"
			android:textColor="@color/colorPrimaryDark"
			android:id="@+id/details_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/details_title_padding"/>
	</android.support.v7.widget.CardView>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<ImageView
			android:layout_margin="@dimen/details_view_poster_margin"
			android:id="@+id/details_poster_image"
			android:layout_width="@dimen/details_view_poster_width"
			android:layout_height="@dimen/details_view_poster_height"/>
		<android.support.v7.widget.CardView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_margin="@dimen/details_view_poster_margin"
			android:layout_height="match_parent">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<TextView
					android:gravity="center_vertical"
					android:textAlignment="center"
					android:textSize="@dimen/details_text"
					android:textColor="@color/colorPrimary"
					android:id="@+id/details_release_date"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"/>
				<TextView
					android:gravity="center_vertical"
					android:textAlignment="center"
					android:textSize="@dimen/details_text"
					android:textColor="@color/colorPrimary"
					android:id="@+id/detail_vote_average"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"/>
					<LinearLayout
						android:id="@+id/detail_favourite"
						android:layout_width="match_parent"
						android:layout_height="0dp"
						android:layout_weight="1"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/detail_favourite_image"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>
						<TextView
							android:gravity="center_vertical"
							android:textAlignment="center"
							android:textColor="@color/colorPrimary"
							android:id="@+id/detail_favourite_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>
					</LinearLayout>
			</LinearLayout>
		</android.support.v7.widget.CardView>
	</LinearLayout>
	<android.support.v7.widget.CardView
		android:elevation="@dimen/cardview_default_elevation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/details_view_poster_margin">
		<TextView
			android:textSize="@dimen/details_text_synopsis"
			android:id="@+id/details_synopsis"
			android:textColor="@color/colorText"
			android:padding="@dimen/details_title_padding"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>
	</android.support.v7.widget.CardView>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/movie_trailer_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
	<android.support.v7.widget.RecyclerView
		android:id="@+id/movie_review_recycler_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/recycler_view_padding"/>
</LinearLayout>
</ScrollView>